<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded="pageLoaded">

	<GridLayout rows="1*, auto, 2*, auto">		

		<ListView id="products-list" row="0">
			<ListView.itemTemplate>
				<GridLayout height="30" columns="1*, 2*, auto" horizontalAlignment="stretch">
					<Image imageSource="{{ image }}" />
					<TextField col="1" text="{{ price }}" margin="0 10" textAlignment="right" />
					<Button col="2" text="x" margin="0 5 0 20" />
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>

		<GridLayout row="1" columns="auto, *" borderColor="gray">
			<Label text="Total:" />
			<Label col="1" horizontalAlignment="right" text="29.99" />
		</GridLayout>

		<Image id="billImageView" row="2" horizontalAlignment="center" verticalAlignment="center" />
		<AbsoluteLayout id="image-container" row="2">
			<GridLayout id="selection" horizontalAlignment="left" verticalAlignment="top" style.borderColor="gray" />
		</AbsoluteLayout>
		<!-- <Image id="cropped-image" row="1" margin="5" stretch="aspectFit" horizontalAlignment="left" verticalAlignment="top" /> -->

		<Button text="scan" row="3" margin="5" horizontalAlignment="center" verticalAlignment="bottom" tap="addImageButtonTap" />
	</GridLayout>
</Page>