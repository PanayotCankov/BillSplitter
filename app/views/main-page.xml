<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded="pageLoaded">
	<TabView>
		<TabView.items>
			<TabViewItem id="NewBill" title="Bill" iconSource="res://ic_add">
				<TabViewItem.view>
					<GridLayout rows="*, 200, auto">
						<Image id="billImageView" horizontalAlignment="left" verticalAlignemnt="top" stretch="none" />
						<AbsoluteLayout id="image-container">
							<GridLayout id="selection" horizontalAlignment="left" verticalAlignemnt="top" style.borderColor="gray" />
						</AbsoluteLayout>
						<Image  row="1" id="cropped-image" stretch="none" horizontalAlignment="center" verticalAlignemnt="center" />
						<Button row="2" text="scan" margin="40" tap="addImageButtonTap" />
					</GridLayout>
				</TabViewItem.view>
			</TabViewItem>
			<TabViewItem id="SearchNearby" title="Join" iconSource="res://ic_party">
				<TabViewItem.view>
					<GridLayout rows="*, auto">
						<Button row="1" text="search" margin="40" />
					</GridLayout>
				</TabViewItem.view>
			</TabViewItem>
		</TabView.items>
	</TabView>
</Page>