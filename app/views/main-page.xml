<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded="pageLoaded">
	<TabView>
		<TabView.items>
			<TabViewItem id="NewBill" title="Bill" iconSource="res://ic_add">
				<TabViewItem.view>
					<GridLayout rows="*, auto">
						<Image id="billImageView" />
						<Button row="1" text="scan" margin="40" tap="addImageButtonTap" />
					</GridLayout>
				</TabViewItem.view>
			</TabViewItem>
			<TabViewItem id="SearchNearby" title="Join" iconSource="res://ic_party">
				<TabViewItem.view>
					<GridLayout rows="*, auto">
						<ListView id="nearbyPartiesList">
							<ListView.itemTemplate>
								<GridLayout>
									<Label text="{{ name }}" />
								</GridLayout>
							</ListView.itemTemplate>
						</ListView>
						<Button row="1" text="search" margin="40" tap="searchNearbyParties" />
					</GridLayout>
				</TabViewItem.view>
			</TabViewItem>
		</TabView.items>
	</TabView>
</Page>